		<NativeReference Include="CoreML" Kind="Framework" />
	</ItemGroup>
	-->
	
	<!-- 
	https://github.com/xamarin/xamarin-macios/issues/15118
	-->
	<Target Condition="'$(TargetFramework)' == 'net6.0-ios'" Name="AddCoreML" BeforeTargets="_ComputeLinkNativeExecutableInputs" AfterTargets="_LoadLinkerOutput">
		<ItemGroup>
			<_LinkerFrameworks Add="CoreML" />
		</ItemGroup>
	</Target>	
	
	<ItemGroup>
		<!-- App Icon -->
		<MauiIcon Include="Resources\AppIcon\appicon.svg" ForegroundFile="Resources\AppIcon\appiconfg.svg" Color="#512BD4" />

		<!-- Splash Screen -->
		<MauiSplashScreen Include="Resources\Splash\splash.svg" Color="#512BD4" BaseSize="128,128" />

		<!-- Images -->
		<MauiImage Include="Resources\Images\*" />

		<!-- Custom Fonts -->
		<MauiFont Include="Resources\Fonts\*" />

		<!-- Raw Assets (also remove the "Resources\Raw" prefix) -->
		<MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Microsoft.ML.OnnxRuntime" Version="1.12.1" />
	  <PackageReference Include="SkiaSharp" Version="2.88.0" />
	</ItemGroup>

